<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssafy.happyhouse.model.dao.FavoriteDao">
	<select id="list" resultType="FavoriteDto">
		select * from favorite order by dong
	</select>
	
	<insert id="insert">
		insert into favorite (dong) values (#{dong}) 
	</insert>
	
	<delete id="delete">
		delete from favorite where dong = #{dong}
	</delete>
	
	<select id="get" resultType="FavoriteDto">
		select * from favorite where dong = #{dong}
	</select>
</mapper>
